datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
	binaryTargets = ["native", "rhel-openssl-3.0.x"]
}


model Sell {
	id           Int      @id @default(autoincrement())
	network		   String   @default("")
	assetId      String
	assetName    String
	precision		 Int      @default(0)
	sellPrice    Float
	sellAmount   Float
	sellerAddress String
	timestamp    DateTime @default(now())
	status       String
}

model Order {
	id             Int      @id @default(autoincrement())
	network 			 String   @default("")
	assetId        String
	assetName      String
	precision			 Int      @default(0)
	sellPrice      Float
	sellAmount     Float
	buy_psbt       String
	buy_sign_psbt  String?
	sell_psbt      String?
	sell_sign_psbt String?
	payment_id     String?
	invoice        String
	buyer_address  String
	sell_address   String
	status         String
	txid		   String?
	createdAt      DateTime @default(now())
	sellId         Int
}
